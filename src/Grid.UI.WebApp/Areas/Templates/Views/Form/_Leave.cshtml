<h2>Apply Leave</h2>
<div class="row" data-bind="loadingWhen: isBusy">
    <div class="col-lg-8">
        <form action="#" method="post" data-bind="submit: submitForm, with: selected">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>Leave Type</label>
                @Html.DropDownList("LeaveTypeId", null, new { @class = "form-control", data_bind = "value: LeaveTypeId" })
            </div>
            <div class="form-group">
                <label>Duration</label>
                @Html.DropDownList("Duration", null, new { @class = "form-control", data_bind = "value: Duration" })
            </div>
            <div class="form-group">
                <label data-bind="text: $parent.startDateLabel"></label>
                <input type="text" class="form-control" name="Start" data-bind="dateTimePicker: Start"/>
            </div>
            <div class="form-group" data-bind="visible: $parent.showEndDate">
                <label>End Date</label>
                <input type="text" class="form-control" name="End" data-bind="dateTimePicker: End"/>
            </div>
            <div class="form-group">
                <label>Reason</label>
                <textarea class="form-control" name="Reason" data-bind="value: Reason"></textarea>
            </div>
            <input type="hidden" name="Count" data-bind="value: Count" />
            <input type="hidden" name="Id" data-bind="value: Id" />
            <input type="submit" value="Submit" class="btn btn-primary" />
        </form>
    </div>
</div>
