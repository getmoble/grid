@model Grid.Features.KBS.ViewModels.ArticleAttachmentViewModel

<h2>Create Article Attachment</h2>

@using (Html.BeginForm("Create", "ArticleAttachments", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.ArticleId)

        <div class="form-group">
            @Html.LabelFor(model => model.AttachmentType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.AttachmentType, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AttachmentType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Document, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="Document" id="Document" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}