
<h2>Manage Projects</h2>
<projects></projects>

<script type="text/html" id="projects-template">
    <div class="col-md-12">
        <projectsearch></projectsearch>
    </div>
    <br />
    <div class="col-md-8">
        <projectslist params="entity: 'project', enableFilter:true, manageList:true"></projectslist>
    </div>
    <div class="col-md-4" data-bind="visible:showQuickView">
        <projectsupdate params="entity: 'project'"></projectsupdate>
    </div>
</script>

<script type="text/html" id="projectsearch-template">
    <div class="col-sm-2">
        <label>Title</label>
        <input type="text" class="form-control" placeholder="Enter Title" data-bind="value:title">
    </div>
    <div class="col-sm-2">
        <label>Client</label>
        <dropdown-list params="entity: 'client',selectedValue: clientId, caption: 'Choose Client'"></dropdown-list>
    </div>
    @*<div class="col-sm-2">
        <label>Created On</label>
        <input type="text" class="form-control" data-bind="dateTimePicker: createdOn"  placeholder="Enter Date">
    </div>*@
    <div class="col-sm-2">
        <label>Type</label>
        <dropdown-list params="entity: 'projecttype',selectedValue: projecttype, caption: 'Choose Type'"></dropdown-list>
    </div>
    <div class="col-sm-2">
        <label>Status</label>
        <dropdown-list params="entity: 'projectstatus',selectedValue: status, caption: 'Choose Status'"></dropdown-list>
    </div>
    <div class="col-sm-2">
        <button class="btn btn-primary" style="margin-top:23px;" data-bind="click:filter">Filter</button>
        <button class="btn btn-default" style="margin-top:23px;" data-bind="click:refresh">Reset</button>
    </div>
</script>

@section Scripts{
    <script>
        $(function () {
            ko.applyBindings();
        });
    </script>
}