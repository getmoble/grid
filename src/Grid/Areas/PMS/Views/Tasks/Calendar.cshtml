<h2>Task Calendar</h2>
<div id='calendar'></div>
@section Scripts{
    <script>
        $(document).ready(function() {
            $('#calendar').fullCalendar({
                events: '/API/Task/MyTasks',
                eventClick: function (calEvent, jsEvent, view) {
                    window.location.href = "/PMS/Tasks/Details/" + calEvent.id;
                }
            });
        });
    </script>
}

