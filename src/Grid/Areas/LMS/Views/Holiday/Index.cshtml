<h2>Manage Holidays</h2>
<holiday></holiday>

<script type="text/html" id="holiday-template">
    <div class="col-md-12">
        <holidaysearch></holidaysearch>
    </div>
    <br />
    <div class="col-md-8">
        <holiday-list params="entity: 'holiday', enableFilter:true, manageList:true"></holiday-list>
    </div>
    <div class="col-md-4" data-bind="visible:showQuickView">
        <holidayupdate params="entity: 'holiday'"></holidayupdate>
    </div>
</script>
<script type="text/html" id="holidaysearch-template">
    <div class="col-sm-3">
        <label>Holiday Type</label>
        <dropdown-list params="entity: 'holidaytype',selectedValue: type, caption: 'Choose Holiday Type'"></dropdown-list>
    </div>
    <div class="col-sm-3">
        <label>Year</label>
        <select data-bind="options: years,value: year, optionsCaption: 'Choose Year'" class="form-control"></select>
    </div>
    <div class="col-sm-3">
        <label></label>
        <button class="btn btn-primary" style="margin-top:25px;" data-bind="click:filter">Filter</button>
        <button class="btn btn-default" style="margin-top:25px;" data-bind="click:refresh">Reset</button>
    </div>
</script>

@section Scripts{
    <script>
        $(function () {
            ko.applyBindings();
        });
    </script>
}