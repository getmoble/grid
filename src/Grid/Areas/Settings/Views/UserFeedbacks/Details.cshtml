@model Grid.Features.Feedback.Entities.UserFeedback

@{
    ViewBag.Title = "Details";
}

<h2>Details UserFeedback</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Submitted By User
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedByUser.Person.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>
        @if (!string.IsNullOrEmpty(Model.Screenshot))
        {
            <dt>
                @Html.DisplayNameFor(model => model.Screenshot)
            </dt>
            <dd>
                <img src="@Url.Content(Model.Screenshot)" alt="Image" width="90%" />
            </dd>
        }
    </dl>
</div>